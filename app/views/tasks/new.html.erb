<h1>Here's the form for a new task</h1>

<%= form_with(model: @task) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :details %>
  <%= f.text_field :details %>
  <%= f.check_box :completed, checked: 'Task completed' %>
  <%= f.label :completed, 'Task completed' %>
  <%= f.submit %>
 <% end %>
